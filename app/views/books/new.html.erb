<h1>New Book</h1>
<%= form_with(model: @book, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= form.submit"submit" , class:"btn btn-primary"%>
  </div>
<% end %>

