<h1>New Category</h1>
<%= form_with(model: @categories, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= form.submit"submit" , class:"btn btn-primary"%>
  </div>
<% end %>

<%= link_to 'Back', categories_path %>
<!DOCTYPE html>
<html>
<head>
  <title>YourApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>
<body>
